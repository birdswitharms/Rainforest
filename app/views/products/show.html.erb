<h1><%= @product.name %></h1>
<p class="link"><%= link_to 'edit', edit_product_path(@product.id) %> | <%= link_to("delete", product_path(@product.id), method: :delete, data: {confirm: "Are you sure you want to delete this product?"})  %>
<%= render 'product', product: @product %>
<hr>

<h4>New Review</h4>
<%= render 'reviews/form', review: @review, product: @product %>


<h4>Reviews</h4>
<% @reviews.each do |review| %>
  <article>
    <p>Message: <%= review.message %></p>
    <p><%= review.created_at %></p> <%= link_to 'edit', edit_product_review_path(review.id) %> |
    <%= link_to("delete", product_review_path(:product_id => @product.id, :id => review.id,), method: :delete, data: {confirm: "Are you sure you want to delete this review?"})  %>

  </article>
<% end %>
